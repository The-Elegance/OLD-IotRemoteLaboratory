        margin-right: 8px;
    }

        .ghost-icon-button-input-file path {
        fill: #BFB2FF;
    }

        .ghost-icon-button-input-file span {
        color: #BFB2FF;
        font-size: 14px;
        font-weight: 400;
        line-height: 1;
    }

        .ghost-icon-button-input-file:hover {
        background: #BFB2FF;
        transition: .3s;
    }

            .ghost-icon-button-input-file:hover span, .ghost-icon-button-input-file:hover path {
            color: white;
            fill: white;
            transition: .3s;
        }

        .ghost-icon-button-input-file input[type=file] {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

    .icon-button {
        padding: 4px;
        background: transparent;
        border: 1px solid #1e1e1e;
        border-radius: 5px;
    }

        .icon-button svg {
            height: 100%;
            width: 100%;
            max-width: 28px;
            display: block;
            fill: #BFB2FF;
